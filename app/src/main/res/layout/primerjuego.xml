<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/primerfondo">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:padding="10dp">

        //primera fila

        <TableRow
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/boton0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:backgroundTint="#B65050">

            </ImageButton>

            <ImageButton
                android:id="@+id/boton1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:backgroundTint="#B65050"></ImageButton>

            <ImageButton
                android:id="@+id/boton2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:backgroundTint="#B65050"></ImageButton>

            <ImageButton
                android:id="@+id/boton3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="3"
                android:backgroundTint="#B65050"></ImageButton>

        </TableRow>

        //segunda fila

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/boton4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:backgroundTint="#B65050"></ImageButton>

            <ImageButton
                android:id="@+id/boton5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:backgroundTint="#B65050"></ImageButton>

            <ImageButton
                android:id="@+id/boton6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:backgroundTint="#B65050"></ImageButton>

            <ImageButton
                android:id="@+id/boton7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="3"
                android:backgroundTint="#B65050"></ImageButton>

        </TableRow>

        //tercera fila

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/boton8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:backgroundTint="#B65050"></ImageButton>

            <ImageButton
                android:id="@+id/boton9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:backgroundTint="#B65050"></ImageButton>

            <ImageButton
                android:id="@+id/boton10"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:backgroundTint="#B65050"></ImageButton>

            <ImageButton
                android:id="@+id/boton11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="3"
                android:backgroundTint="#B65050"></ImageButton>

        </TableRow>

        //cuarta fila

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/boton12"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:backgroundTint="#B65050"></ImageButton>

            <ImageButton
                android:id="@+id/boton13"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:backgroundTint="#B65050"></ImageButton>

            <ImageButton
                android:id="@+id/boton14"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:backgroundTint="#B65050"></ImageButton>

            <ImageButton
                android:id="@+id/boton15"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="3"
                android:backgroundTint="#B65050"></ImageButton>

        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/botonReiniciarJuego"
                android:layout_width="126dp"
                android:layout_height="64dp"
                android:backgroundTint="#B65050"
                android:text="@string/boton_juego_reinit"
                android:textColor="@color/white"></Button>

            <Button
                android:id="@+id/botonJuegoSalir"
                android:layout_width="126dp"
                android:layout_height="64dp"
                android:backgroundTint="#B65050"
                android:text="@string/boton_juego_quit"
                android:textColor="@color/white"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/texto_puntuacion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="25dp"></TextView>

        </LinearLayout>

    </TableLayout>

</LinearLayout>